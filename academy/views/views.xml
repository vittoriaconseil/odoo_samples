<odoo>
	<data>
		<record id="action_academy_teachers" model="ir.actions.act_window">
			<field name="name">Academy teachers</field>
			<field name="res_model">academy.teachers</field>
		</record>

		<!-- Ajoute le menu Teacher Form -->
		<record id="teacher_submit_page_link" model="website.menu">
			<field name="name">Teacher Form</field>
			<field name="url">/academy/teacher_submit</field>
			<field name="parent_id" ref="website.main_menu" />
			<field name="sequence" type="int">99</field>
		</record>

		<record id="academy_teacher_form" model="ir.ui.view">
			<field name="name">Academy teachers: form</field>
			<field name="model">academy.teachers</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<header>
							<button class="oe_stat_button" name="website_publish_button" type="object" icon="fa-globe">
								<field name="website_published" widget="website_button" />
							</button>
						</header>

						<label for="name" />
						<field name="name" />
						<label for="biography" />
						<field name="biography" />

						<field name="course_ids">
							<tree string="Courses" editable="bottom">
								<field name="name" />
							</tree>
						</field>
					</sheet>
				</form>
			</field>
		</record>

		<record id="action_academy_courses" model="ir.actions.act_window">
			<field name="name">Academy courses</field>
			<field name="res_model">product.template</field>
		</record>
		<record id="academy_course_search" model="ir.ui.view">
			<field name="name">Academy courses: search</field>
			<field name="model">product.template</field>
			<field name="arch" type="xml">
				<search>
					<field name="name" />
					<field name="teacher_id" />
				</search>
			</field>
		</record>
		<record id="academy_course_list" model="ir.ui.view">
			<field name="name">Academy courses: list</field>
			<field name="model">product.template</field>
			<field name="arch" type="xml">
				<tree string="Courses">
					<field name="name" />
					<field name="teacher_id" />
				</tree>
			</field>
		</record>
		<record id="academy_course_form" model="ir.ui.view">
			<field name="name">Academy courses: form</field>
			<field name="model">product.template</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<label for="name" />
						<field name="name" />
						<label for="teacher_id" />
						<field name="teacher_id" />
					</sheet>
					<div class="oe_chatter">
						<field name="message_follower_ids" widget="mail_followers" />
						<field name="message_ids" widget="mail_thread" />
					</div>
				</form>
			</field>
		</record>

		<menuitem sequence="0" id="menu_academy" name="Academy" />
		<menuitem id="menu_academy_content" parent="menu_academy" name="Academy Content" />
		<menuitem id="menu_academy_content_courses" parent="menu_academy_content" action="action_academy_courses" />
		<menuitem id="menu_academy_content_teachers" parent="menu_academy_content" action="action_academy_teachers" />
	</data>
</odoo>